<form  method="PUT" action="/api/customization/footer" class="customizationForm">

    <div class="item-one">
        <h5>Instagram</h5>
        <input name="instagram" class="form-control mb-3" value="{{#if data.footer.customization.instagram}}{{data.footer.customization.instagram}}{{/if}}">
    </div>

    <div class="item-two">
        <h5>Snapchat</h5>
        <input name="snapchat" class="form-control mb-3" value="{{#if data.footer.customization.snapchat}}{{data.footer.customization.snapchat}}{{/if}}">
    </div>

    <div class="item-three">
        <h5>Twitter</h5>
        <input name="twitter" class="form-control mb-3" value="{{#if data.footer.customization.twitter}}{{data.footer.customization.twitter}}{{/if}}">
    </div>

    <div class="item-four">
        <h5>Facebook</h5>
        <input name="facebook" class="form-control mb-3" value="{{#if data.footer.customization.facebook}}{{data.footer.customization.facebook}}{{/if}}">
    </div>

    <div class="item-five">
        <h5>LinkedIn</h5>
        <input name="linkedin" class="form-control mb-3" value="{{#if data.footer.customization.linkedin}}{{data.footer.customization.linkedin}}{{/if}}">
    </div>

<br>

<button class="button btn-primary">Submit</button>
</form>

